<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f0f0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devpost.airway.activities.SplashActivity">

    <ImageView
        android:id="@+id/airImage"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/airberlinhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/HiText"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/airImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/descTextSplash"
        android:textColor="#ff0000"
        android:layout_below="@+id/HiText"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textName"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:gravity="center"
        android:textColor="@color/accent"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/descTextSplash"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/buttonSave"
        android:visibility="invisible"
        android:background="@color/primary"
        android:text="save"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_width="110dp"
        android:layout_height="50dp" />

</RelativeLayout>
