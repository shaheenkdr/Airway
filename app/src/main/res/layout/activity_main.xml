<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".activities.MainActivity">

<ScrollView
    android:id="@+id/scrollX"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/flightTracker"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/plo"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="TRACKER"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightDelay"
            app:cardCornerRadius="5dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.7"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/del"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="DELAY"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightRestaurant"
            app:cardCornerRadius="5dp"
            android:alpha="0.7"
            android:layout_below="@+id/flightTracker"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/resto"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="FOOD"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightBook"
            app:cardCornerRadius="5dp"
            android:alpha="0.7"
            android:layout_below="@+id/flightDelay"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/booko"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="BOOKING"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightGame"
            app:cardCornerRadius="5dp"
            android:alpha="0.7"
            android:layout_below="@+id/flightRestaurant"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/game"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="GAME"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightMeditate"
            app:cardCornerRadius="5dp"
            android:alpha="0.7"
            android:layout_below="@+id/flightBook"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/medoo"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="MEDITATE"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/flightPlaces"
            app:cardCornerRadius="5dp"
            android:alpha="0.7"
            android:layout_below="@+id/flightMeditate"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#ef3d21"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/placo"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="PLACES"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </RelativeLayout>
</ScrollView>

    <android.support.design.widget.FloatingActionButton
        app:elevation="4dp"
        android:id="@+id/fabx"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/dial"
        android:layout_marginBottom="20dp"
        app:backgroundTint="#f442df"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        </android.support.design.widget.FloatingActionButton>


</RelativeLayout>
